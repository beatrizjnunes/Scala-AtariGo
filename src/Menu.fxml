<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #2c3e50, #34495e);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuController">

   <children>
      <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 15; -fx-padding: 25 35 35 35;" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="30.0">
         <effect>
            <DropShadow color="rgba(0,0,0,0.6)" offsetX="0" offsetY="5" radius="15" />
         </effect>
         <children>
            <Label style="-fx-text-fill: #f39c12; -fx-font-weight: bold;" text="Atari Go Menu">
               <font>
                  <Font name="Arial Black" size="36" />
               </font>
               <effect>
                  <DropShadow color="#f39c12" radius="3" spread="0.5" />
               </effect>
            </Label>
            <Separator maxWidth="200" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 0%, #f1c40f, transparent);" />
            <Label fx:id="lblMessage" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-font-size: 14px;" />
           
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" text="Number of pieces to capture:" />
                  <TextField fx:id="inputCaptureLimit" alignment="CENTER" prefWidth="160.0" style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d;" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" text="Maximum time per move (s):" />
                  <TextField fx:id="inputTimeLimit" alignment="CENTER" prefWidth="160.0" style="-fx-background-radius: 8; -fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d;" />
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" text="Difficulty:" />
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <ToggleButton fx:id="easyToggle" style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 8 18 8 18;" text="Easy">
                     <effect>
                        <DropShadow color="rgba(0,0,0,0.5)" offsetX="0" offsetY="2" radius="6" />
                     </effect>
                  </ToggleButton>
                  <ToggleButton fx:id="mediumToggle" style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 8 18 8 18;" text="Medium">
                     <effect>
                        <DropShadow color="rgba(0,0,0,0.5)" offsetX="0" offsetY="2" radius="6" />
                     </effect>
                  </ToggleButton>
                  <ToggleButton fx:id="hardToggle" style="-fx-background-color: #34495e; -fx-text-fill: #ecf0f1; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 8 18 8 18;" text="Hard">
                     <effect>
                        <DropShadow color="rgba(0,0,0,0.5)" offsetX="0" offsetY="2" radius="6" />
                     </effect>
                  </ToggleButton>
               </children>
            </HBox>

            <HBox alignment="CENTER" spacing="50.0" style="-fx-padding: 20 0 0 0;">
               <children>
                  <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#onPlayClicked" prefWidth="110" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #f39c12, #d35400); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 12; -fx-cursor: hand;" text="Play">
                     <effect>
                        <DropShadow color="rgba(0,0,0,0.7)" offsetX="0" offsetY="3" radius="8" />
                     </effect>
                  </Button>

                  <Button fx:id="btnExit" mnemonicParsing="false" onAction="#onExitClicked" prefWidth="110" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #f39c12, #d35400); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 12; -fx-cursor: hand;" text="Exit">
                     <effect>
                        <DropShadow color="rgba(0,0,0,0.7)" offsetX="0" offsetY="3" radius="8" />
                     </effect>
                  </Button>

                  <Button fx:id="btnLoadGame" mnemonicParsing="false" onAction="#onLoadGameClicked" prefWidth="110" style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #f39c12, #d35400); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 12; -fx-cursor: hand;" text="Load">
                     <effect>
                        <DropShadow color="rgba(0,0,0,0.7)" offsetX="0" offsetY="3" radius="8" />
                     </effect>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
